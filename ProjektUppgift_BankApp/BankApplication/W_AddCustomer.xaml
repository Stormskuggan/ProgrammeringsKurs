<Window x:Class="BankApplication.W_AddCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankApplication"
        mc:Ignorable="d"
        Title="W_AddCustomer" Height="300" Width="300">
    
    
    <Border Padding ="10">
        <StackPanel>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Add New Customer" VerticalAlignment="Top"/>
            <TextBox x:Name="FirstNameInput" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Text="First Name" Cursor="IBeam" Margin="0,10,0,0"/>
            <TextBox x:Name="LastNameInput" Height="24" TextWrapping="Wrap" VerticalAlignment="Top" Text="Last Name" Cursor="IBeam" Margin="0,10,0,0"/>
            <TextBox x:Name="PersonalNumberInput" Height="24" TextWrapping="Wrap" Text="Personnr" Margin="0 10 0 0"/>
            <Button x:Name="AddCustomerButton" HorizontalAlignment="Left" Margin="0 10 0 0" VerticalAlignment="Top" Content="Add Customer"/>
            <TextBlock x:Name="InfoBlock" TextWrapping="Wrap" Text="-" VerticalAlignment="Top" Margin="0,10,0,0"/> 
            <Button x:Name="CancelButton" Content="Cancel" Margin="0,10,0,0" IsCancel="True"/>
        </StackPanel>
    </Border>
</Window>
